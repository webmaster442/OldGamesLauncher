<Window x:Class="OldGamesLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OldGamesLauncher"
        xmlns:applib="http://github.com/webmaster442/AppLib/WPF"
        mc:Ignorable="d"
        Title="Old Games Launcher" 
        Height="480"
        Width="850">
    <Grid>
        <TabControl
            Grid.Row="1"
            TabStripPlacement="Bottom">
            <TabItem Header="Games">
                <local:Games/>
            </TabItem>
            <TabItem Header="Emulators">
                <local:Emulators/>
            </TabItem>
        </TabControl>
        <Grid
            x:Name="Dialog"
            Visibility="Collapsed"
            Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border
                Background="Blue">
                <TextBlock
                    Text="Title"
                    Grid.Row="0"
                    Grid.Column="0"/>
            </Border>
            <applib:FaImageButton
                Grid.Row="0"
                Grid.Column="1"
                Icon="fa_close"
                x:Name="DialogClose"
                Click="DialogClose_Click"
                IconSize="24"/>
            <Border
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Background="Silver">
                <ContentPresenter x:Name="DialogContent"/>
            </Border>
        </Grid>
    </Grid>
</Window>
