<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:applib="http://github.com/webmaster442/AppLib/WPF"
                    xmlns:app="clr-namespace:OldGamesLauncher">
    
    <LinearGradientBrush x:Key="Fade" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#ecf0f1" Offset="0"/>
        <GradientStop Color="#ecf0f1" Offset="0.8"/>
        <GradientStop Color="#bdc3c7" Offset="1"/>
    </LinearGradientBrush>

    <Style TargetType="app:MainWindow">
        <Setter Property="Background" Value="{StaticResource Fade}"/>
    </Style>

    <Style TargetType="applib:AnimatedTabControl">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style TargetType="RadioButton">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
</ResourceDictionary>